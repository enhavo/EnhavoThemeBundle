{% extends 'EnhavoThemeBundle::base.html.twig' %}
{% block main %}
<div class="clearfix page-wrap">
    <section id="article-feed">
        <div class="articles">
            <div class="container">
                <h2>ACME Online</h2>
                <p class="capitals spacing cat">neueste Artikel</p>
            </div>
            <div class="mobile-app">
                <div class="speechbubble">
                    <p>Neu! <br/>Jetzt auch <br/>als App</p>
                </div>
                <img src="/bundles/enhavotheme/img/ipad.png" alt=""/>
            </div>
            <div class="container npam">
                {% for article in articles %}
                <article class="clearfix" data-article-item>
                    <a href="/article-page">
                        <span class="article-photo">
                            <img src="{{ media_url(article.picture) }}" alt=""/>
                        </span>
                        <span class="article-content">
                            <h3 class="title">{{ article.title }}</h3>
                            {% for category in article.categories %}
                            <p class="category capitals">{{ category }}</p>
                            <p class="desc">{{ article.teaser }}</p>
                            {% endfor %}
                            <span href="" class="capitals readmore-link">...MEHR</span>
                            <p class="date">{{ article.publicationDate|date('d m Y') }}</p>
                        </span>
                    </a>
                </article>
                {% endfor %}
                <div class="load-articles">
                    <a href="#" class="capitals" data-more-articles>
                        Mehr Artikel laden <br/>
                        <i class="icon-circle-with-plus"></i>
                    </a>
                </div>
            </div>
        </div>
    </section>
    {% include 'EnhavoThemeBundle:Default:sidebar.html.twig' %}
</div>
<section id="image-text">
    <div class="container">
        <div class="row">
            <div class="col-sm-6 image">
                <img src="/bundles/enhavotheme/img/magazine.png" alt=""/>
                <div class="stoerer">
                    <p>Unsere <br/>Neue <br/>Ausgabe</p>
