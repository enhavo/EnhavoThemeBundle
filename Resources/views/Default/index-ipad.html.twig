<section id="contact">
    <div class="container">
        <h2>Kontakt</h2>
        <p class="capitals">Schreiben Sie uns Ihr Anliegen</p>
    </div>
    <div class="row npam">
        <div class="col-md-8 col-sm-12 npam">
            <div class="form">
                <form id="ajax-contact" method="post" action="" data-form-container>
                    <div class="row npam">
                        <div class="col-sm-6 npam">
                            <input data-input type="text" placeholder="Familienname" name="name" id="name"/>
                            <input data-input type="text" placeholder="Vorname" name="prename" id="prename"/>
                            <input data-input type="text" placeholder="Email Adresse" name="email" id="email"/>
                        </div>
                        <div class="col-sm-6 npam">
                            <textarea data-input data-input-message name="message" name="message" id="message"></textarea>
                            <button type="submit" class="button blue" data-send-message><i class="icon-forward"></i></button>
                        </div>
                    </div>
                </form>
                <div id="form-messages" data-response-container></div>
            </div>
        </div>
